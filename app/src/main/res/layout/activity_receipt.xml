<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trevbattaglia.app.InfoActivity"
    tools:ignore="MergeRootFrame" >
    <TableRow
        android:id="@+id/tableRow1"

        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:layout_alignLeft="@+id/textView1"

            android:layout_alignRight="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="23dp"
            android:src="@drawable/monte"
            android:layout_span="7" />
       <TableRow android:layout_column="7" android:layout_gravity="center_horizontal"/>

    </TableRow>



    <TableRow
        android:id="@+id/tableRow2"

        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView1"

            android:paddingBottom="20dp"
            android:paddingLeft="50dp"
            android:text="@string/hello_world"
            android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"

        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/drink_info"

            android:paddingBottom="35dp"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:text="@string/hello_world"
            android:textSize="24sp" />

    </TableRow>


        <TextView
            android:id="@+id/timeInfo"

            android:paddingBottom="35dp"
            android:paddingLeft="50dp"

            android:text="@string/hello_world"
            android:textSize="24sp"
            android:layout_column="0" />

    <TextView



        android:paddingLeft="50dp"

        android:text="Thank You For Eating at Monte's!"
        android:textSize="24sp"
        android:layout_column="0" />


</TableLayout>
